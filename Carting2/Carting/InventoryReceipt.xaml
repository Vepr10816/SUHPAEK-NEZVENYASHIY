<Page x:Class="Carting.InventoryReceipt"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Carting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InventoryReceipt">

    <Grid>
        <Label Content="Поступление инвентаря" HorizontalAlignment="Center" Height="36" Margin="0,40,0,0" VerticalAlignment="Top" Width="270" FontFamily="Arial" FontSize="22"/>
        <ListBox VerticalAlignment="Stretch" Name="list"  Margin="20,100,20,90"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <WrapPanel>
                <Button Content="Сохранить" Name="btnAddNew" HorizontalAlignment="Center" Margin="0,0,0,50" VerticalAlignment="top" FontFamily="Arial" Background="LightGray" Height="22" BorderBrush="Black" BorderThickness="1" FontSize="16" Width="191"/>
                <Button Content="Отмена" Name="btnRefresh" HorizontalAlignment="Center" Margin="10,0,0,50" VerticalAlignment="Bottom" FontFamily="Arial" Background="LightGray" Height="22" BorderBrush="Black" BorderThickness="1" FontSize="16" Width="120"/>
            </WrapPanel>
        </Grid>
    </Grid>
</Page>
