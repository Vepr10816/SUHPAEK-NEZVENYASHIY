<Page x:Class="Carting.SponsorshipConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Carting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SponsorshipConfirmationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="28" Content="Спасибо за вашу спонсорскую поддержку!" FontFamily="Arial" HorizontalAlignment="Center" Margin="0 0 0 15"/>
            <Label x:Name="RunnerInfoLabel" FontFamily="Arial" Content="Иван Прудов из России" HorizontalAlignment="Center" FontSize="20" Margin="0 15 0 5"/>
            <Label x:Name="CharityNameLabel" Content="Фонд Собак" HorizontalAlignment="Center" FontSize="28" />
            <Label x:Name="SumLabel" Content="$50" HorizontalAlignment="Center" FontSize="72" FontFamily="Arial"/>
            <Button Content="Назад" Width="70" Height="25" Margin="0 15 0 0" FontFamily="Arial" BorderBrush="Black" BorderThickness="1" Background="LightGray" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
